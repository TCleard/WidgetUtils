<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tc_action_bar_height"
    android:orientation="vertical">

    <ImageButton
        android:id="@+id/left_button"
        android:layout_width="@dimen/tc_action_bar_button_size"
        android:layout_height="@dimen/tc_action_bar_button_size"
        android:background="@drawable/dark_ripple_background"
        android:scaleType="centerInside"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@+id/right_button_layout"
        android:layout_toRightOf="@id/left_button"
        android:gravity="center|left"
        android:padding="10dp"/>

    <LinearLayout
        android:id="@+id/right_button_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true">

        <ImageButton
            android:id="@+id/right_button2"
            android:layout_width="@dimen/tc_action_bar_button_size"
            android:layout_height="@dimen/tc_action_bar_button_size"
            android:background="@drawable/dark_ripple_background"
            android:scaleType="centerInside"
            android:visibility="gone"/>

        <ImageButton
            android:id="@+id/right_button1"
            android:layout_width="@dimen/tc_action_bar_button_size"
            android:layout_height="@dimen/tc_action_bar_button_size"
            android:background="@drawable/dark_ripple_background"
            android:scaleType="centerInside"
            android:visibility="gone"/>

    </LinearLayout>

</RelativeLayout>